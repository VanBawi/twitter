<div class="container"> 
  <% if @user.followers.blank? %>
    <b>This user is not followed by anyone yet!</b>
  <% else %>
    <p><%= @user.name %>'s follower(s):</p>
       <% @user.followers.each do |user| %>
         <p><a href="/users/<%= user.id %>"> @<%= user.username %></a></p>
         <br>
       <% end %>
   <% end %> 
</div>